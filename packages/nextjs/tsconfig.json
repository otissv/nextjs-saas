{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "tsconfig/lib",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.d.ts",
    "../components/**/*.ts",
    "../components/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
