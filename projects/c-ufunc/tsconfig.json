{
  "extends": "tsconfig/lib",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "outDir": "build",
    "noImplicitReturns": true
  },
  "include": ["**/*.ts", "**/*.tsx", "types/*"],
  "exclude": ["dist", "build", "node_modules"],
  "paths": {
    "@/*": ["./libs/*"],
    "*": ["types/*", "node_modules/*"]
  }
}
